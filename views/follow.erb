<head>
    <meta charset="UTF-8">
    <title>dashboard</title>
    <link rel="stylesheet" href="<%= url('style-feed.css')%>">
</head>

<body>
    <nav>
        <h1 id = "leftHandNavHeading">followers</h1>
        <div id = "rightHandNavHeading">
            <a href = "/dashboard"><h3 class = "rightNavItem">dashboard</h3></a>
            <a href = "/feed"><h3 class = "rightNavItem">feed</h3></a>
            <h3 id = "logOut" class = "rightNavItem">log out</h3>
        </div>
    </nav>

    <div id = "followersHolder">
        <div id = "followersListHolder">
        <h1>Followers [<%= @followed_by.size %>]</h1>
        <input class = "search" placeholder = "Search followers here">
        <ul class = "list"> 
            <% @followed_by.each do |followed_by| %>
                <li>
                    <a class = "name" href = "/users/<%= followed_by.id %>"><h4><%= followed_by.email %></h4></a>
                </li>
            <% end %>
        </ul>
        </div>
        <div id = "followedListHolder">
        <h1>Following [<%= @following.size %>]</h1>
        <input class = "search" placeholder = "Search followed users here">
        <ul class = "list">
            <% @following.each do |follow_me| %>
                <li>
                    <a class = "name" href = "/users/<%= follow_me.id %>"><h4><%= follow_me.email %></h4></a>
                </li>
            <% end %>
        </ul>
        </div>
    </div>



<!-- particles.js container --> 
    <div id="particles-js"></div> 
<!-- particles.js lib - https://github.com/VincentGarreau/particles.js -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js"></script>
<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script type = "text/javascript" src="<%= url('script-follow.js') %>"></script>
<style>
    .count-particles{display: none !important;}
</style>

</body>

